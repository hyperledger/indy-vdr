  },
  "dependencies": {
    "@2060.io/ffi-napi": "4.0.9",
    "@2060.io/ref-napi": "3.0.6",
    "@hyperledger/indy-vdr-shared": "workspace:*",
    "@mapbox/node-pre-gyp": "^1.0.10",
